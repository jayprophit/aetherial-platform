# ====================================
# Application Configuration
# ====================================
NODE_ENV=development
PORT=4000
API_URL=http://localhost:4000
CLIENT_URL=http://localhost:3000

# ====================================
# JWT Configuration
# ====================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ACCESS_EXPIRATION_MINUTES=15
JWT_REFRESH_EXPIRATION_DAYS=7
JWT_RESET_PASSWORD_EXPIRATION_MINUTES=10
JWT_VERIFY_EMAIL_EXPIRATION_MINUTES=60

# ====================================
# Database Configuration
# ====================================
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/aetherial?schema=public

# ====================================
# Email Configuration (SMTP)
# ====================================
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=your-email@example.com
SMTP_PASSWORD=your-smtp-password
EMAIL_FROM=noreply@aetherial.com

# ====================================
# Google OAuth
# ====================================
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# ====================================
# GitHub OAuth
# ====================================
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# ====================================
# Apple OAuth
# ====================================
APPLE_CLIENT_ID=com.your.app.bundle.id
APPLE_TEAM_ID=your-apple-team-id
APPLE_KEY_ID=your-apple-key-id
# Generate a private key in Apple Developer Console and paste the contents here
# Remove all newlines and replace with actual newlines when setting up
APPLE_PRIVATE_KEY=your-apple-private-key

# ====================================
# Rate Limiting
# ====================================
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX=100

# ====================================
# CORS Configuration
# ====================================
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# ====================================
# Session Configuration
# ====================================
SESSION_SECRET=your-session-secret-change-in-production
SESSION_COOKIE_MAX_AGE=86400000  # 1 day

# ====================================
# Security
# ====================================
SECURE_COOKIES=false  # Set to true in production with HTTPS
TRUST_PROXY=1

# ====================================
# Logging
# ====================================
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# ====================================
# Frontend (Vite)
# ====================================
VITE_APP_ID=proj_abc123def456
VITE_OAUTH_PORTAL_URL=http://localhost:3000
VITE_APP_TITLE="Aetherial Platform"
VITE_APP_LOGO="/logo.svg"
VITE_API_URL=http://localhost:4000
VITE_WS_URL=ws://localhost:4000

# ====================================
# Analytics (Optional)
# ====================================
VITE_ANALYTICS_ENABLED=false
VITE_ANALYTICS_ENDPOINT=
VITE_ANALYTICS_WEBSITE_ID=

# ====================================
# AI Services (Optional)
# ====================================
OPENAI_API_KEY=your-openai-api-key
OPENAI_API_URL=https://api.openai.com/v1

# ====================================
# Feature Flags
# ====================================
FEATURE_REGISTRATION=true
FEATURE_EMAIL_VERIFICATION=true
FEATURE_SOCIAL_LOGIN=true
FEATURE_2FA=false
FEATURE_MAINTENANCE_MODE=false
